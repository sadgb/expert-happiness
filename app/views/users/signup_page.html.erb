<h1>New @user</h1>

<%= form_with(url: signup_path, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>

      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, required: true, id: :user_email, value:@user&.email %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, required: true, id: :user_name, value:@user&.name %>
  </div>

  <div class="field">
    <%= form.label :surname %>
    <%= form.text_field :surname, required: true, id: :user_surname, value:@user&.surname %>
  </div>

  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city, required: true, id: :user_city, value:@user&.city %>
  </div>

  <div class="field">
    <%= form.label :about %>
    <%= form.text_area :about, required: true, id: :user_about, value:@user&.about %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age, required: true, id: :user_age, value:@user&.age %>
  </div>


  <div class="field">
    <%= form.label :gender %>
    <%= form.select(:gender, User::GENDERS.to_a) %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password, required: true, id: :user_pwd %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>

<%= link_to 'Back', root_path %>
